{
    "name": "dynamo-php/bootstrap",
    "type": "library",
    "license": "MIT",
    "scripts": {
        "test": "./vendor/bin/pest",
        "fix:tests": "./vendor/bin/phpcbf --standard=PSR12 --report=summary tests/",
        "fix:src": "./vendor/bin/phpcbf --standard=PSR12 --report=summary src/"
    },
    "require": {
        "psr/container": ">=2.0.2",
        "php": ">=8.2"
    },
    "require-dev": {
        "pestphp/pest": "^2.35",
        "squizlabs/php_codesniffer": "^3.10"
    },
    "autoload": {
        "files": [
            "src/Functions.php"
        ],
        "psr-4": {
            "ContainerFactory\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable"
}
